<script>
  // Simple client-side JavaScript for toggling between categories
  const studentBtn = document.getElementById('student-btn');
  const facultyBtn = document.getElementById('faculty-btn');
  const alumniBtn = document.getElementById('alumni-btn');
  const categoryTitle = document.getElementById('category-title');
  const studentSection = document.getElementById('student-section');
  const facultySection = document.getElementById('faculty-section');
  const alumniSection = document.getElementById('alumni-section');

  if (studentBtn && facultyBtn && alumniBtn && categoryTitle && studentSection && facultySection && alumniSection) {
    // Function to reset all buttons to default style
    const resetButtons = () => {
      [studentBtn, facultyBtn, alumniBtn].forEach(btn => {
        btn.classList.add('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
        btn.classList.remove('bg-blue-600', 'text-white');
      });
    };

    // Function to hide all sections
    const hideSections = () => {
      [studentSection, facultySection, alumniSection].forEach(section => {
        section.classList.add('hidden');
      });
    };

    studentBtn.addEventListener('click', () => {
      // Reset all buttons and hide all sections
      resetButtons();
      hideSections();
      
      // Set active button
      studentBtn.classList.add('bg-blue-600', 'text-white');
      studentBtn.classList.remove('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
      
      // Show active section
      studentSection.classList.remove('hidden');
      
      // Update title
      categoryTitle.textContent = 'Student Achievements';
    });

    facultyBtn.addEventListener('click', () => {
      // Reset all buttons and hide all sections
      resetButtons();
      hideSections();
      
      // Set active button
      facultyBtn.classList.add('bg-blue-600', 'text-white');
      facultyBtn.classList.remove('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
      
      // Show active section
      facultySection.classList.remove('hidden');
      
      // Update title
      categoryTitle.textContent = 'Faculty Achievements';
    });

    alumniBtn.addEventListener('click', () => {
      // Reset all buttons and hide all sections
      resetButtons();
      hideSections();
      
      // Set active button
      alumniBtn.classList.add('bg-blue-600', 'text-white');
      alumniBtn.classList.remove('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
      
      // Show active section
      alumniSection.classList.remove('hidden');
      
      // Update title
      categoryTitle.textContent = 'Alumni Achievements';
    });
  }
</script>