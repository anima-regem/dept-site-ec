---
import PageLayout from "@/layouts/page-layout.astro";
import JournalPaper from '../../../components/textModel.astro';
import "@/styles/global.css";
import ButtonLayout from '../../../components/buttonLayout.astro';

// Patent data
const patentsData = [
    {
        "category": "Patent",
        "date": "08/01/2019",
        "title": "Method and System for Consonant-Vowel Ratio modification for improving speech perception",
        "institution": "In this college",
        "academic_year": "2018-2019"
    }
];
---

<PageLayout title="Patents | GEC PKD">
  <ButtonLayout currentTab="patents" />

  <h1 class="text-2xl font-bold mb-4">Patents</h1>
  <p class="mb-6">This page lists all patents.</p>

  <!-- Dynamic Patent Entries -->
  {patentsData.map(patent => (
    <JournalPaper
      title={patent.title}
      description={`${patent.academic_year}, ${patent.institution}`}
      date={patent.date}
      place={patent.institution}
    />
  ))}

  {patentsData.length === 0 && (
    <p class="text-gray-600">No patents found.</p>
  )}
</PageLayout>