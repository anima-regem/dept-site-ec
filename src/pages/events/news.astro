const sortedNews = newsItems.sort((a, b) => new Date(b.displayDate) - new Date(a.displayDate));

// Group news items into three columns while maintaining chronological order
const distributeNewsToColumns = (news) => {
  const columns = [[], [], []];
  news.forEach((item, index) => {
    const columnIndex = index % 3;
    columns[columnIndex].push(item);
  });
  return columns;
};

const newsColumns = distributeNewsToColumns(sortedNews);
---

<PageLayout title="Faculty of Department of Electronics and Communication Engineering | GEC PKD">
  <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold mb-8">News</h1>

    <!-- Masonry Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {newsColumns.map((column, columnIndex) => (
        <div class="flex flex-col gap-6">
          {column.map((news) => (
            <article class={`
              bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md 
              transition-all duration-200
              ${news.size === 'large' ? 'min-h-[400px]' : 
                news.size === 'medium' ? 'min-h-[300px]' : 
                'min-h-[250px]'}
              ${columnIndex === 1 ? 'lg:mt-12' : 
                columnIndex === 2 ? 'lg:mt-24' : ''}
            `}>
              {news.image && (
                <div class="relative w-full h-48 overflow-hidden">
                  <img
                    src={news.image}
                    alt={news.title}
                    class="w-full h-full object-cover"
                  />
                </div>
              )}
              <div class="p-4 flex flex-col justify-between">
                <div>
                  <div class="inline-block bg-gray-100 text-gray-700 px-3 py-1 rounded-md text-sm font-medium mb-3">
                    {news.displayDate}
                  </div>
                  <h2 class="text-lg font-semibold mb-3 line-clamp-2">
                    {news.title}
                  </h2>
                </div>
                <p class="text-gray-600 text-sm line-clamp-2">
                  {news.description}
                </p>
              </div>
            </article>
          ))}
        </div>
      ))}
    </div>

    <!-- Pagination -->
    <div class="flex justify-center gap-4 mt-8">
      <button class="w-10 h-10 rounded-full border border-gray-300 flex items-center justify-center hover:bg-gray-50 transition-colors">
        <span class="sr-only">Previous page</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      <button class="w-10 h-10 rounded-full border border-gray-300 flex items-center justify-center hover:bg-gray-50 transition-colors">
        <span class="sr-only">Next page</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>
  </main>
</PageLayout>