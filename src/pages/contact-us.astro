---
import "@/styles/global.css";
import PageLayout from "@/layouts/page-layout.astro";
---

<PageLayout
  title="Faculty of Department of Electronics and Communication Engineering | GEC PKD"
>
  <main class="container mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row gap-8">
      <!-- Left side content -->
      <div class="md:w-1/2 space-y-6">
        <h1 class="text-4xl font-bold text-zinc-800">Reach Us</h1>
        
        <div class="space-y-4">
          <h2 class="text-2xl font-medium text-zinc-700">
            DEPARTMENT OF ELECTRONICS AND COMMUNICATION
          </h2>
          <address class="not-italic text-zinc-600 leading-relaxed">
            Government Engineering College Rd,<br />
            Mannampatta, Sreekrishnapuram,<br />
            Palakkad, Kerala, PIN-678633
          </address>
          
          <div class="space-y-2">
            <p class="flex items-center gap-2 text-zinc-600">
              <span class="font-medium">Phone:</span>
              <a href="tel:+91XXXXXXXXXX" class="hover:text-blue-600">+91 XXXXX XXXXX</a>
            </p>
            <p class="flex items-center gap-2 text-zinc-600">
              <span class="font-medium">Email:</span>
              <a href="mailto:principal@gecskp.ac.in" class="hover:text-blue-600">principal@gecskp.ac.in</a>
            </p>
          </div>
        </div>
      </div>

      <!-- Right side map -->
      <div class="md:w-1/2 space-y-4">
        <h3 class="text-2xl font-medium text-zinc-600">
          Find us on Google Maps
        </h3>
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3917.792590429096!2d76.43187407488439!3d10.903361589253254!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3ba7d635151d9b73%3A0xecf06761ecf4f56c!2sGovt.%20Engineering%20College%20Sreekrishnapuram!5e0!3m2!1sen!2sin!4v1722239045811!5m2!1sen!2sin"
          width="100%"
          height="450"
          style="border: 0"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="rounded-lg shadow-md"
        />
      </div>
    </div>
  </main>
</PageLayout>