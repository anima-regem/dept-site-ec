---
// src/components/JournalPaper.astro

const { title, description, date, place } = Astro.props;
---

<div class="rounded-lg bg-gray-100 p-5 shadow-sm relative mb-6">
  <div class="mb-3">
    <div class="flex items-center gap-4 flex-wrap">
      {title && <p class="text-lg text-black font-normal">{title}</p>}
      {date && <span class="bg-pink-100 text-black px-4 py-1 rounded-full text-sm">{date}</span>}
    </div>
    {description && <p class="text-gray-700 mt-2">{description}</p>}
  </div>
  
  {place && (
    <div class="absolute right-5 bottom-5 bg-white p-3 rounded-lg shadow">
      <p class="text-center">In this college<br />{place}</p>
    </div>
  )}
</div>